doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='#{pathToAssets}/docs/favicon.ico')
    title NewBite

    // Bootstrap dependencies
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')

    // IE Dependencies
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

    // Stylesheet
    style
      include cover.css

  body
    if user
      .site-wrapper
        .site-wrapper-inner
          .cover-container
            .masthead.clearfix
              .inner
              
            .inner.cover
              h1.cover-heading NewBite
              p.lead
                | Welcome, #{user.fullName}
              div.btn-toolbar
                a.btn-lg.btn-default(href='/profile') Edit profile!
                a.btn-lg.btn-default(href='/map') Find food!
              p.lead
                a.btn.btn-lg.btn-default(href='/profile') Edit profile!
              p.lead
                a.btn.btn-lg.btn-default(href='/map') Find food!
              p
                a.btn.btn-lg.btn-default(href='/logout') Logout
            .mastfoot
              .inner
                p
                  | Advith Chelikani and Sagar Punhani | 2015
    else
      // Auto-redirects to login page if no account is found
      script(type='text/javascript').
        window.location.href = '/login';

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
